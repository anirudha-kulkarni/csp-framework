@model CSPLibrary.NewUserModel
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h2>EditUser</h2>
    <h2>@Model.Email</h2>
    <h2>@Model.Customer_Id</h2>*@

<div class="col-lg-12 center" style="margin-left:9%">
    <div class="tableHeader col-lg-9">
        <h2>Edit Profile</h2>
    </div>
    <div class="col-lg-8">        
        @using (Html.BeginForm("UpdateUser", "AdminHome", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m => m.User_Id);
            <div class="form-group">
            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Email, new { @Attribute = "disabled", @disabled = "disabled", @readonly = "readonly"})
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.AccountRole, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.AccountRole)
                    @Html.ValidationMessageFor(m => m.AccountRole)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Customer_Id, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.Customer_Id, new SelectList(new List<Object> { new { value = 1, text = "CSP" } }, "value", "text", 1))
                    @Html.ValidationMessageFor(m => m.Customer_Id)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Status, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.Status, new SelectList(new List<Object> { new { value = "Enabled", text = "Enabled" }, new { value = "Disabled", text = "Disabled" } }, "value", "text", "Enabled"))
                    @Html.ValidationMessageFor(m => m.Status)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Phone)
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Fax, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Fax)
                    @Html.ValidationMessageFor(m => m.Fax)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Address)
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
            </div>


            <div class="modal-footer">
                <a href="/AdminHome/AdminHome" class="btn">Cancel</a>
                <input type="submit" class="btn" value="Save" />
            </div>

        }
    </div>

</div>

