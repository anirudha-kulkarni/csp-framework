        <a id="adduser" type="button" class=" add" href="/CustomerVendor/AddNewCustomerVendor">Add</a>
    </span>

    <h2>Customer-Vendor Mappings</h2>
</div>

<div id="contactList">

    <table cellpadding="0" cellspacing="0" border="0" class="tablesorter" id="table-contacts">
        <thead>
            <tr>
                <th width="5" class="header"></th>

                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Vendor Name</span></a></th>
                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Function</span></a></th>
                <th class="header"><a href="javascript:;" title="" class="arrow"><span>Client Code</span></a></th>
                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Site</span></a></th>
                <th width="200" class="header">&nbsp;</th>
                @*<th class="filter header"></th>*@
            </tr>
        </thead>

        <tfoot class="noRows">
            <tr class="result">
                <td colspan="11"><div>There are 0 items that match your filter criteria.</div></td>
            </tr>
        </tfoot>

        <tbody>
            @{
                foreach (var custVendor in Model)
                {
                    <tr>
                        <td></td>
                        <td onclick="window.document.location = '/CustomerVendor/DisplayCustomerVendorProfile?custvendorid=@custVendor.Customer_Vendor_Id';"><strong><a href="#">@custVendor.VendorName</a></strong></td>
                        <td onclick="window.document.location = '/CustomerVendor/DisplayCustomerVendorProfile?custvendorid=@custVendor.Customer_Vendor_Id';">@custVendor.Function</td>
                        <td onclick="window.document.location = '/CustomerVendor/DisplayCustomerVendorProfile?custvendorid=@custVendor.Customer_Vendor_Id';"><strong><a href="#">@custVendor.ClientCode</a></strong></td>
                        <td onclick="window.document.location = '/CustomerVendor/DisplayCustomerVendorProfile?custvendorid=@custVendor.Customer_Vendor_Id';"><strong>@custVendor.Site</strong></td>

                        <td>
                            <div class="toolLinks">
                                <a href="#" class=" edit" title="Edit Customer Vendor Profile."></a>                               
                                <a href="#delete-confirmation" data-toggle="modal" refer="/CustomerVendor/DeleteCustomerVendor?custvendorid=@custVendor.Customer_Vendor_Id" class="trash" title="Delete this mapping.">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm Customer-Vendor Mapping Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this customer-vendor mapping ? Please note that once the mapping is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete Customer-Vendor Mapping</a>
        </div>
    </div>
</div>
