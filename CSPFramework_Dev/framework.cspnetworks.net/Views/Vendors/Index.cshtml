@model CSPLibrary.VendorsViewModel
@{
    ViewBag.Title = "Vendors List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="text-align:center">
    <h2>Registered Vendors List</h2>
</div>

<div class="wrapper" id="companySetup">

    @*Render Registered USers table from Editor Template*@
    @Html.DisplayFor(m => m.RegisteredVendorsList, "RegisteredVendorsList")

    @*Render New User registration from Editor Template*@
    @Html.EditorFor(m => m.NewVendorRegistrationModel, "NewVendorRegistrationModel")

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")    
    @Styles.Render("~/Content/admin/css")    
    @Styles.Render("~/Content/bootstrap-table/css")
    @Scripts.Render("~/bundles/bootstrap-table")
    @Scripts.Render("~/bundles/maskedEdit")    
}

<script>
    function linkDisplayFormatter(value, row) {
        return '<a href="' + value + '" target="_blank">' + value + '</a>';
    }

    function strongDisplayFormatter(value, row) {
        return '<strong>' + value + '</strong>';
    }
    function nameDisplayFormatter(value, row) {
        return '<strong><a href="/Vendors/DisplayVendorProfile?vendorid=' + row.Vendor_Id + '">' + value + '</a></strong>'
    }
    function tableActionsFormatter(value, row) {
        return ' <div>\
                                <a href="/Vendors/EditVendor?vendorid=' + row.Vendor_Id + '" class="flaticon-edit" title="Edit User Profile."></a>\
                                <a href="#delete-confirmation" refer="/Vendors/DeleteVendor?vendorid=' + row.Vendor_Id + '" data-toggle="modal" class="flaticon-recycle" title="Delete this user."></a>\
                            </div>';
    }

    //$(document).ready(function () {
