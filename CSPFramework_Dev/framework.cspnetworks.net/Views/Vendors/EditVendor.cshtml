@model CSPLibrary.NewVendorModel
@{
    ViewBag.Title = "EditVendor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h2>EditUser</h2>
    <h2>@Model.Email</h2>
    <h2>@Model.Customer_Id</h2>*@

<div class="col-lg-12 center" style="margin-left:9%">
    <div class="tableHeader col-lg-9">
        <h2>Edit Vendor Profile</h2>
    </div>
    <div class="col-lg-8">        
        @using (Html.BeginForm("UpdateVendor", "Vendors", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m => m.Vendor_Id);
            <div class="form-group">
            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.SupportEmail, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.SupportEmail)
                    @Html.ValidationMessageFor(m => m.SupportEmail)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SupportNumber, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.SupportNumber)
                    @Html.ValidationMessageFor(m => m.SupportNumber)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.website, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.website)
                    @Html.ValidationMessageFor(m => m.website)
                </div>
            </div>            


            <div class="modal-footer">
                <a href="/Vendors/Index" class="btn">Cancel</a>
                <input type="submit" class="btn" value="Save" />
            </div>

        }
    </div>

</div>

