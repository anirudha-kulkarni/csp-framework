@model IEnumerable<CSPLibrary.RegisteredUserModel>



<div id="contactList">
    <div id="custom-toolbar">
        <div class="form-inline" role="form">
            <div class="form-group">
                <a id="adduser" type="button" class="btn" href="#add-new-user" data-toggle="modal">Add New User</a>
            </div>
        </div>
    </div>

    <table class="tablesorter" id="table-contacts" data-toolbar="#custom-toolbar" data-show-refresh="true" data-show-toggle="true" data-pagination="true" data-search="true" data-toggle="table" data-url="/People/GetUsersList" data-cache="false" data-sort-name="FisrtName" data-sort-order="asc">
        <thead>
            <tr>
                <th class="header" data-field="FisrtName" data-sortable="true" data-formatter="nameDisplayFormatter">Name</th>
                <th class="header" data-field="Email" data-sortable="true">Email</th>
                <th class="header" data-field="Phone">Phone</th>
                <th class="header" data-field="MobileNumber">Mobile</th>
                <th class="header" data-field="AccountRole" data-sortable="true" data-formatter="strongDisplayFormatter">Works As</th>
                <th class="header" data-events="operateEvents" data-formatter="tableActionsFormatter"></th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm User Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this user ? Please note that once the user is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete User</a>
        </div>
    </div>
</div>