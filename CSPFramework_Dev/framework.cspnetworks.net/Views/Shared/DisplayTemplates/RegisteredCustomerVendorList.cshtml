@model IEnumerable<CSPLibrary.NewCustomerVendorModel>


<div id="contactList">
    <div id="custom-toolbar">
        <div class="form-inline" role="form">
            <div class="form-group">
                <a id="adduser" type="button" class="btn" href="/CustomerVendor/AddNewCustomerVendor">Add New Customer-Vendor</a>
            </div>
        </div>
    </div>

    <table class="tablesorter" id="table-contacts" data-toolbar="#custom-toolbar" data-show-refresh="true" data-show-toggle="true" data-pagination="true" data-search="true" data-toggle="table" data-url="/CustomerVendor/GetCustomerVendorsList" data-cache="false" data-sort-name="VendorName" data-sort-order="asc">
        <thead>
            <tr>
                <th class="header" data-field="VendorName" data-sortable="true" data-formatter="nameDisplayFormatter">Vendor Name</th>
                <th class="header" data-field="SolutionString" data-sortable="true">Solution</th>
                <th class="header" data-field="FunctionString" data-sortable="true">Function</th>
                <th class="header" data-field="ClientCode" data-sortable="true" data-formatter="strongDisplayFormatter">Client Code</th>
                <th class="header" data-field="SiteString" data-sortable="true">Site</th>
                <th class="header" data-events="operateEvents" data-formatter="tableActionsFormatter"></th>
            </tr>
        </thead>
    </table>
</div>


<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm Customer-Vendor Mapping Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this customer-vendor mapping ? Please note that once the mapping is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete Customer-Vendor Mapping</a>
        </div>
    </div>
</div>
