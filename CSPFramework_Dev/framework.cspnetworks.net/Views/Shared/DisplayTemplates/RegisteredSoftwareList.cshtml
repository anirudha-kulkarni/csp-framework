@model IEnumerable<CSPLibrary.NewSoftwareModel>


<div id="contactList">
    <div id="custom-toolbar">
        <div class="form-inline" role="form">
            <div class="form-group">
                <a id="adduser" type="button" class="btn" href="/Software/AddNewSoftware">Add New Software</a>
            </div>
        </div>
    </div>

    <table class="tablesorter" id="table-contacts" data-toolbar="#custom-toolbar" data-show-refresh="true" data-show-toggle="true" data-pagination="true" data-search="true" data-toggle="table" data-url="/Software/GetSoftwaresList" data-cache="false" data-sort-name="MakeName" data-sort-order="asc">
        <thead>
            <tr>
                <th class="header" data-field="MakeName" data-sortable="true" data-formatter="nameDisplayFormatter">Make</th>
                <th class="header" data-field="ModelName" data-sortable="true">Model</th>
                <th class="header" data-field="Media_Type_Name" data-sortable="true">Media Type</th>
                <th class="header" data-field="PurchasedBy_Name" data-sortable="true" data-formatter="strongDisplayFormatter">Purchased By</th>
                <th class="header" data-events="operateEvents" data-formatter="tableActionsFormatter"></th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm Software Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this software ? Please note that once the software is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete Software</a>
        </div>
    </div>
</div>