@model IEnumerable<CSPLibrary.NewClientModel>

<div id="contactList">
    <div id="custom-toolbar">
        <div class="form-inline" role="form">
            <div class="form-group">
                <a id="adduser" type="button" class="btn" href="/Clients/AddNewClient">Add New Client</a>
            </div>
        </div>
    </div>

    <table class="tablesorter" id="table-contacts" data-toolbar="#custom-toolbar" data-show-refresh="true" data-show-toggle="true" data-pagination="true" data-search="true" data-toggle="table" data-url="/Clients/GetClientsList" data-cache="false" data-sort-name="Client_Code" data-sort-order="asc">
        <thead>
            <tr>
                <th class="header" data-field="Client_Code" data-sortable="true" data-formatter="nameDisplayFormatter">Client Code</th>
                <th class="header" data-field="Company_Name" data-sortable="true">Company Name</th>
                <th class="header" data-field="ServiceTypeString" data-sortable="true">Service Type</th>
                <th class="header" data-field="Website" data-sortable="true" data-formatter="linkDisplayFormatter">Website</th>
                <th class="header" data-events="operateEvents" data-formatter="tableActionsFormatter"></th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm Client Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this client ? Please note that once the client is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete Client</a>
        </div>
    </div>
</div>

