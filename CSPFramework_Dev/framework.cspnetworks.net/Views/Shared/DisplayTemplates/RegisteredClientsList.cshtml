        <a id="adduser" type="button" class=" add" href="/Clients/AddNewClient">Add</a>
    </span>

    <h2>Clients List</h2>
</div>

<div id="contactList">

    <table cellpadding="0" cellspacing="0" border="0" class="tablesorter" id="table-contacts">
        <thead>
            <tr>
                <th width="5" class="header"></th>

                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Client Code</span></a></th>
                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Company Name</span></a></th>
                <th class="header"><a href="javascript:;" title="" class="arrow"><span>Service Type</span></a></th>
                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Website</span></a></th>
                <th width="200" class="header">&nbsp;</th>
                @*<th class="filter header"></th>*@
            </tr>
        </thead>

        <tfoot class="noRows">
            <tr class="result">
                <td colspan="11"><div>There are 0 items that match your filter criteria.</div></td>
            </tr>
        </tfoot>

        <tbody>
            @{
                foreach (var client in Model)
                {
                    <tr>
                        <td></td>
                        <td onclick="window.document.location = '/Clients/DisplayClientProfile?clientid=@client.Client_Id';"><strong><a href="#">@client.Client_Code</a></strong></td>
                        <td onclick="window.document.location = '/Clients/DisplayClientProfile?clientid=@client.Client_Id';">@client.Company_Name</td>
                        <td onclick="window.document.location = '/Clients/DisplayClientProfile?clientid=@client.Client_Id';">@client.ServiceTypeString</td>
                        <td onclick="window.document.location = '/Clients/DisplayClientProfile?clientid=@client.Client_Id';"><strong>@client.Website</strong></td>

                        <td>
                            <div class="toolLinks">
                                <a href="/Clients/EditClientProfile?clientid=@client.Client_Id" class=" edit" title="Edit client Profile."></a>
                                <a href="#delete-confirmation" data-toggle="modal" refer="/Clients/DeleteClient?clientid=@client.Client_Id" class="trash" title="Delete this client.">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm Client Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this client ? Please note that once the client is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete Client</a>
        </div>
    </div>
</div>

