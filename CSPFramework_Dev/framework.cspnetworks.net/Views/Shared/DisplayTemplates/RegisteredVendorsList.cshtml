@model IEnumerable<CSPLibrary.NewVendorModel>

<div id="contactList">
    <div id="custom-toolbar">
        <div class="form-inline" role="form">
            <div class="form-group">
                <a id="adduser" type="button" class="btn" href="#add-new-vendor" data-toggle="modal">Add New Vendor</a>
            </div>
        </div>
    </div>

    <table class="tablesorter" id="table-contacts" data-toolbar="#custom-toolbar" data-show-refresh="true" data-show-toggle="true" data-pagination="true" data-search="true" data-toggle="table" data-url="/Vendors/GetVendorsList" data-cache="false" data-sort-name="Name" data-sort-order="asc">
        <thead>
            <tr>
                <th class="header" data-field="Name" data-sortable="true" data-formatter="nameDisplayFormatter">Name</th>
                <th class="header" data-field="SupportNumber" data-sortable="true">Support Number</th>
                <th class="header" data-field="SupportEmail" data-sortable="true">Support Email</th>
                <th class="header" data-field="website" data-sortable="true" data-formatter="linkDisplayFormatter">Website</th>
                <th class="header" data-events="operateEvents" data-formatter="tableActionsFormatter"></th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm Vendor Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this vendor ? Please note that once the vendor is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete Vendor</a>
        </div>
    </div>
</div>
