@model IEnumerable<CSPLibrary.NewHardwareModel>



<div id="contactList">
    <div id="custom-toolbar">
        <div class="form-inline" role="form">
            <div class="form-group">
                <a id="adduser" type="button" class="btn" href="/Hardware/AddNewHardware">Add New Hardware</a>
            </div>
        </div>
    </div>

    <table class="tablesorter" id="table-contacts" data-toolbar="#custom-toolbar" data-show-refresh="true" data-show-toggle="true" data-pagination="true" data-search="true" data-toggle="table" data-url="/Hardware/GetHardwaresList" data-cache="false" data-sort-name="Client_Code" data-sort-order="asc">
        <thead>
            <tr>
                <th class="header" data-field="Vendor_Name" data-sortable="true" data-formatter="nameDisplayFormatter">Vendor Name</th>
                <th class="header" data-field="PurchaserName" data-sortable="true">Purchased By</th>
                <th class="header" data-field="ClientCode" data-sortable="true">Client Code</th>
                <th class="header" data-field="Location" data-sortable="true" data-formatter="strongDisplayFormatter">Location</th>
                <th class="header" data-events="operateEvents" data-formatter="tableActionsFormatter"></th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm Hardware Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this hardware ? Please note that once the hardware is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete Hardware</a>
        </div>
    </div>
</div>
