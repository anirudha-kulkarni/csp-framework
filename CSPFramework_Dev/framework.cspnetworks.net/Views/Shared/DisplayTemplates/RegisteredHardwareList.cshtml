        <a id="addhardware" type="button" onclick="window.document.location = '/Hardware/AddNewHardware'" class=" add" href="" data-toggle="modal">Add</a>
    </span>

    <h2>Hardwares</h2>
</div>

<div id="contactList">

    <table cellpadding="0" cellspacing="0" border="0" class="tablesorter" id="table-contacts">
        <thead>
            <tr>
                <th width="5" class="header"></th>

                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Vendor Name</span></a></th>
                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Purchased By</span></a></th>
                <th class="header"><a href="javascript:;" title="" class="arrow"><span>Client Code</span></a></th>
                <th class="header"><a href="javascript:;" title="Sort" class="arrow"><span>Location</span></a></th>
                <th width="200" class="header">&nbsp;</th>
                @*<th class="filter header"></th>*@
            </tr>
        </thead>

        <tfoot class="noRows">
            <tr class="result">
                <td colspan="11"><div>There are 0 items that match your filter criteria.</div></td>
            </tr>
        </tfoot>

        <tbody>
            @{
                foreach (var hardware in Model)
                {
                    <tr>
                        <td></td>
                        <td onclick="window.document.location = '/Hardware/DisplayHardwareDetails?hardwareid=@hardware.Hardware_Id';"><strong><a href="#">@hardware.Vendor_Name</a></strong></td>
                        <td onclick="window.document.location = '/Hardware/DisplayHardwareDetails?hardwareid=@hardware.Hardware_Id';">@hardware.PurchaserName</td>
                        <td onclick="window.document.location = '/Hardware/DisplayHardwareDetails?hardwareid=@hardware.Hardware_Id';">@hardware.ClientCode</td>
                        <td onclick="window.document.location = '/Hardware/DisplayHardwareDetails?hardwareid=@hardware.Hardware_Id';"><strong>@hardware.Location</strong></td>

                        <td>
                            <div class="tool-Links">
                                <a href="/Hardware/EditHardware?hardwareid=@hardware.Hardware_Id" class="flaticon-edit" title="Edit Hardware Details"></a>
                                <a href="#delete-confirmation" data-toggle="modal" refer="/Hardware/DeleteHardware?hardwareid=@hardware.Hardware_Id" class="flaticon-recycle" title="Delete this Hardware"></a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



<div class="modal" id="delete-confirmation">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top:35%">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title">Confirm Hardware Deletion</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <p>Are you sure that you want to delete this hardware ? Please note that once the hardware is deleted, you can <strong>not revert the operation !</strong> </p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <a id="anchorDelete_" href="" class="btn">Delete Hardware</a>
        </div>
    </div>
</div>
