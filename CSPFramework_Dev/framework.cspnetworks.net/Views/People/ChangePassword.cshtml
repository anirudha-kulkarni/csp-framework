@model CSPLibrary.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 center" style="margin-left:9%">
    <div class="tableHeader col-lg-9">
        <h2>Change Password</h2>
    </div>
    <div class="col-lg-8">
        @using (Html.BeginForm("ChangePasswordOfUser", "People", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
            </div>
            <div class="form-group">
            </div>
            
            <p>Please enter your new password two times below. Type it in carefully because they have to match!
            <br><br>Your password must be<strong> 6 character minimum.</strong></p>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m => m.User_Id);
            <div class="form-group">
            </div>
            <div class="form-group">
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.PasswordFor(m => m.Password, new { @class="form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

             <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <div class="modal-footer">
                <a href="/People/People" class="btn">Cancel</a>
                <input type="submit" class="btn" value="Save" />
            </div>
        }
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
}