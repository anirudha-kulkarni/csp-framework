@model CSPLibrary.NewUserModel
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h2>EditUser</h2>
    <h2>@Model.Email</h2>
    <h2>@Model.Customer_Id</h2>*@

<div class="col-lg-12 center" style="margin-left:9%">
    <div class="tableHeader col-lg-9">
        <h2>Edit Profile</h2>
    </div>
    <div class="col-lg-8">        
        @using (Html.BeginForm("UpdateUser", "People", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m => m.User_Id);
            <div class="form-group">
            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Name, new { @placeholder = "Enter Full Name" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Email, new { @Attribute = "disabled", @disabled = "disabled", @readonly = "readonly"})
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.AccountRole, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.AccountRole, "AccountRoles")
                    @Html.ValidationMessageFor(m => m.AccountRole)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Customer_Id, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.Customer_Id, "CustomersList")
                    @Html.ValidationMessageFor(m => m.Customer_Id)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Status, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.Status, "UserStatus")
                    @Html.ValidationMessageFor(m => m.Status)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Phone, new { @class="phone", @placeholder = "999-999-9999" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MobileNumber, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.MobileNumber, new { @class="phone", @placeholder = "999-999-9999" })
                    @Html.ValidationMessageFor(m => m.MobileNumber)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Address, new { @placeholder = "Enter Address" })
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
            </div>


            <div class="modal-footer">
                <a href="/People/People" class="btn">Cancel</a>
                <input type="submit" class="btn" value="Save" />
            </div>

        }
    </div>

</div>

@section Scripts {    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery/maskedEdit")

    <script>

        $(document).ready(function () {         

            // Maked Edit Controls
            jQuery(function ($) {
                $(".phone").mask("000-000-0000");        
            });
        });
    </script>
}