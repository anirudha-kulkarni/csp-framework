@model CSPLibrary.ClientsViewModel

@{
    ViewBag.Title = "Clients List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="text-align:center">
    <h2>Registered Clients List</h2>
</div>

<div class="wrapper" id="companySetup">

    @*Render Registered USers table from Editor Template*@
    @Html.DisplayFor(m => m.RegisteredClientsList, "RegisteredClientsList")

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/admin/css")
    @Styles.Render("~/Content/bootstrap-table/css")
    @Scripts.Render("~/bundles/bootstrap-table")
}

<script>
    function linkDisplayFormatter(value, row) {
        return '<a href="' + value + '" target="_blank">' + value + '</a>';
    }
    function strongDisplayFormatter(value, row) {
        return '<strong>' + value + '</strong>';
    }
    function nameDisplayFormatter(value, row) {
        return '<strong><a href="/Clients/DisplayClientProfile?clientid=' + row.Client_Id + '">' + value + '</a></strong>'
    }
    function tableActionsFormatter(value, row) {
        return ' <div>\
                                <a href="/Clients/EditClientProfile?clientid=' + row.Client_Id + '" class="flaticon-edit" title="Edit User Profile."></a>\
                                <a href="#delete-confirmation" refer="/Clients/DeleteClient?clientid=' + row.Client_Id + '" data-toggle="modal" class="flaticon-recycle" title="Delete this Client."></a>\
                            </div>';
    }

    $(document).ready(function () {
        // Maked Edit Controls
        jQuery(function ($) {
            $(".phone").mask("000.000.0000");
        });
    });
</script>