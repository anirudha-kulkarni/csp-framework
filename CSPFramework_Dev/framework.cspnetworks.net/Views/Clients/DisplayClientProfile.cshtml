@model CSPLibrary.NewClientViewModel 
@{
    ViewBag.Title = "Client Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 center" style="margin-left:9%">
    <div class="tableHeader col-lg-9">
        <a class="col-lg-2 btn" href="/Clients/Index/">All Clients</a>
        <h2 class="col-lg-8">Profile of client @Model.newClientModel.Client_Code</h2>
    </div>
    <div class="col-lg-9 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0 toppad">
        <div class="panel panel-info">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="/content/images/profile_photo.png" class="img-circle"> </div>
                    <div class=" col-md-9 col-lg-9 ">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td><strong>Client Code :</strong></td>
                                    <td>@Model.newClientModel.Client_Code</td>
                                </tr>

                                <tr>
                                    <td><strong>Company Name : </strong></td>
                                    <td>@Model.newClientModel.Company_Name</td>
                                </tr>

                                @*<tr>
                                    <td><strong>Address :</strong></td>
                                    <td>@Model.Address</td>
                                </tr>
                                
                                <tr>
                                    <td><strong>City :</strong></td>
                                    <td>@Model.City</td>
                                </tr>

                                <tr>
                                    <td><strong>State :</strong></td>
                                    <td>@Model.State</td>
                                </tr>

                                <tr>
                                    <td><strong>Zip :</strong></td>
                                    <td>@Model.Zip</td>
                                </tr>

                                <tr>
                                    <td><strong>Phone Number :</strong></td>
                                    <td>@Model.PhoneNumber</td>
                                </tr>

                                <tr>
                                    <td><strong>Mobile Number :</strong></td>
                                    <td>@Model.MobileNumber</td>
                                </tr>*@

                                <tr>
                                    <td><strong>Website :</strong></td>
                                    <td><a href="@Model.newClientModel.Website" target="_blank">@Model.newClientModel.Website</a></td>
                                </tr>

                                <tr>
                                    <td><strong>Service Type :</strong></td>
                                    <td>@Model.newClientModel.ServiceTypeString</td>
                                </tr>

                                <tr>
                                    <td><strong>Agreement :</strong></td>
                                    <td>
                                        <table>
                                            <tbody>
                                                
                                                <tr>
                                                    <td><i><strong>Agreement Start Date :</strong></i></td>
                                                    <td>
                                                        @if (Model.newClientModel.AgreementStartDate != null)
                                                        {
                                                            @Model.newClientModel.AgreementStartDate.Value.ToShortDateString();
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td><i><strong>Agreement End Date :</strong></i></td>
                                                    <td>
                                                        @if (Model.newClientModel.AgreementEndDate != null)
                                                        {
                                                            @Model.newClientModel.AgreementEndDate.Value.ToShortDateString()
                                                        }
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>

                                <tr>
                                    <td><strong>Team :</strong></td>
                                    <td>@Model.newClientModel.TeamString</td>
                                </tr>

                                <tr>
                                    <td><strong>Status :</strong></td>
                                    <td>@Model.newClientModel.StatusString</td>
                                </tr>

                                <tr>
                                    @*<td><strong>Sites :</strong></td>
                                        <td>@Model.newClientModel.Sites</td>*@
                                    <td colspan="2">
                                        <table>
                                           @{
                                               int count = 1;
                                             foreach (CSPLibrary.ClientSite item in @Model.clientSites)
                                            {
                                                 string location = "Location " + @count + " :";
                                                    <tr>
                                                        <td colspan="2" style="border-top: none; color: rgb(244, 165, 79);"><strong>@location</strong></td>
                                                    </tr>   
                                                count++;
                                                    <tr>
                                                        <td><strong>Address :</strong></td>
                                                        <td>@item.Address</td>
                                                    </tr>
                                
                                                    <tr>
                                                        <td><strong>City :</strong></td>
                                                        <td>@item.City</td>
                                                    </tr>

                                                    <tr>
                                                        <td><strong>State :</strong></td>
                                                        <td>@item.State</td>
                                                    </tr>

                                                    <tr>
                                                        <td><strong>Zip :</strong></td>
                                                        <td>@item.Zip</td>
                                                    </tr>

                                                    <tr>
                                                        <td><strong>Phone Number :</strong></td>
                                                        <td>@item.PhoneNumber</td>
                                                    </tr>

                                                    <tr>
                                                        <td><strong>Fax :</strong></td>
                                                        <td>@item.FaxNumber</td>
                                                    </tr>
                                               <tr>
                                                   <td colspan="2"></td>
                                               </tr>
                                                }
                                           }
                                        </table>
                                    </td>
                                </tr>

                            </tbody>
                        </table>

                        @*<a href="#" class="btn btn-primary">My Sales Performance</a>
                            <a href="#" class="btn btn-primary">Team Sales Performance</a>*@
                    </div>
                </div>
            </div>
            @*<div class="panel-footer">
                    <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                    <span class="pull-right">
                        <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                        <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                    </span>
                </div>*@

        </div>
    </div>
</div>



